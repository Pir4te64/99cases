// tsconfig.json
{
  "compilerOptions": {
    "outDir": "./dist",             // donde emitirá tsc si lo usas sin noEmit
    "baseUrl": ".",                 // raíz del proyecto
    "paths": {
      "@/*": ["src/*"]              // alias @ → src
    },
    "jsx": "react-jsx",
    "lib": ["dom", "es2015"]        // soporte a DOM y ES2015
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue"
  ]
}
